{
    // Hush CMake
    "cmake.configureOnOpen": false,

    // IntelliSense
    "C_Cpp.default.compilerPath": "${userHome}/bin/zephyr-sdk-0.16.1/arm-zephyr-eabi/bin/arm-zephyr-eabi-gcc.exe",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",

    // File Associations
    "files.associations": {
        "gpio.h": "c",
        "kernel.h": "c",
        "bit": "cpp",
        "cstddef": "cpp",
        "cwchar": "cpp",
        "memory": "cpp",
        "type_traits": "cpp",
        "functional": "cpp",
        "limits": "cpp",
        "utility": "cpp",
        "future": "cpp",
        "string": "cpp",
        "format": "cpp"
    }
}