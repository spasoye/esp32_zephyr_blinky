/ {
   	aliases {
   		led0 = &led0;
                button0 = &button0;
   	};

   	leds {
   		compatible = "gpio-leds";
   		led0: led_0 {
   			gpios = <&gpio0 25 GPIO_ACTIVE_LOW>;
                };
   	};

        buttons{
                compatible = "gpio-keys";
                button0: button_0 {
                        gpios = <&gpio0 13 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
                        label = "User button";
                };    
        };
   };